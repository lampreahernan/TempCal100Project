      </GridPane>
      <HBox layoutX="70.0" layoutY="229.0">
         <children>
            <Button fx:id="btnSiguiente" mnemonicParsing="false" onAction="#handleSiguiente" prefHeight="25.0" prefWidth="128.0" text="Next" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancelar" prefHeight="25.0" prefWidth="134.0" text="Cancel" />
         </children>
      </HBox>
   </children>
</AnchorPane>
